{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "useJSXTextNode": true,
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "globals": {
    "PORT": true,
    "API_URL": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/prop-types": "off",
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": "off",
    "comma-spacing": [
      1,
      {
        "after": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "eol-last": [
      1,
      "always"
    ]
  },
  "plugins": [
    "babel",
    "react"
  ]
}
